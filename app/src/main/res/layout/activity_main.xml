                />

        </RadioGroup>

    </LinearLayout>
        <LinearLayout android:id="@+id/l5"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l4"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/g5"
            >

            <RadioButton
